<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.solar.mapper.CommentMapper">
    <resultMap id="commentMap" type="Comment">
        <id property="id" column="id"/>
        <result property="content" column="content"/>
        <result property="time" column="time"/>
        <result property="like" column="like"/>
        <result property="dislike" column="dislike"/>
        <association property="product" resultMap="com.solar.mapper.ProductMapper.productMap"
                     column="product_id"></association>
        <association property="user" resultMap="com.solar.mapper.UserMapper.userMap" column="user_id"></association>
    </resultMap>
    <insert id="addComment">
        INSERT INTO comment(id, content, product_id, user_id,level) VALUES (#{id},#{content},#{productId},#{userId},#{level})
    </insert>
    <update id="increaseLikeById">
        UPDATE comment SET `like`=`like`+1 WHERE id=#{id}
    </update>
    <update id="increaseDislikeById">
        UPDATE comment SET dislike=dislike+1 WHERE id=#{id}
    </update>
    <select id="queryComments" resultMap="commentMap">
        SELECT user.id,user.name,user.head_img,comment.* FROM comment,user WHERE comment.product_id=#{productId} AND comment.user_id=user.id ORDER BY comment.time
    </select>
</mapper>